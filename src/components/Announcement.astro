---
import winners from "../images/Hackathon.png";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
---

<div class="flex flex-col justify-center items-center gap-10 mt-16 md:mt-10">
    <h1 class="font-bold text-5xl font-incon underline underline-offset-8 decoration-wavy decoration-2 decoration-violet-300 ">We Won !!</h1>
     <div class="relative inline-block w-full md:w-9/12 object-contain">
        <Icon 
            name="fluent:new-16-filled" 
            size={65} 
            class="absolute -right-10 -top-10 transform scale-x-[-1] translate-x-2 -translate-y-2"
        />
        <Image 
            src={winners} 
            alt="CheerpX Hackathon" 
            class="border-2 border-violet-300 rounded-md"
        />
    </div>

    <a class="flex items-center gap-2 font-incon w-fit text-2xl group" target="_blank"  href="https://github.com/rheap404/cheerpx_hack">
        Check out our project 
        <svg class="-mt-1 group-hover:translate-x-4 transition-transform ease-in-out duration-200" xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 24"><path fill="white" d="M4 11v2h20v2h2v-2h2v-2h-2V9h-2v2zm18-4h2v2h-2zm0 0h-2V5h2zm0 10h2v-2h-2zm0 0h-2v2h2z"/></svg>
    </a>
</div>