---
import Layout from "../layouts/Layout.astro";
import { work } from "../lib/websites";
import { projects } from "../lib/projects";
import { Image } from "astro:assets";
import "../styles/global.css";

const pageTitle = "Projects";
---

<Layout title={pageTitle}>
  <div class="text-3xl my-12 md:mx-40 2xl:mx-60">
    <div class="mb-20">
        {
            work.map((wrk: any) => (
                <h1 class="font-krub font-bold text-5xl">Websites</h1>
                <hr class="border-t-1 w-full border-indigo-200 mt-4" />
                <div class="grid md:grid-cols-2 gap-16 items-center mt-16">
                    <div class="flex flex-col gap-6">
                        <a href={wrk.href} target="_blank" class="font-incon underline underline-offset-8 decoration-wavy decoration-2 decoration-violet-300 ">
                            {wrk.title}
                        </a>
                        <p class="font-incon font-light text-xl text-indigo-100 ">In my latest internship, I developed a static website using Astro, a modern front-end framework designed for speed and flexibility. This site exemplifies my ability to build optimized, performant web solutions that are not only visually engaging but also highly responsive.</p>
                        <a href={wrk.href} target="_blank"  class="flex gap-2 font-incon w-fit text-xl group"> 
                            Visit 
                            <svg class="-mt-1 group-hover:translate-x-4 transition-transform ease-in-out duration-200" xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 24"><path fill="white" d="M4 11v2h20v2h2v-2h2v-2h-2V9h-2v2zm18-4h2v2h-2zm0 0h-2V5h2zm0 10h2v-2h-2zm0 0h-2v2h2z"/></svg>
                        </a>
                    </div>
                    <Image src={wrk.image.url} alt={wrk.image.alt} class="rounded-md border-[1px] -mt-5 md:mt-0 border-indigo-200"/>
                </div>
      ))
    }
    </div>

   <div class="mb-20">
        <h1 class="font-krub font-bold text-5xl">Projects</h1>
        <hr class="border-t-1 w-full border-indigo-200 mt-4" />
        <div class="md:columns-2 mt-16">
            {
                projects.map((project:any) => (
                <a href={project.link}  target="_blank">
                    <div class="relative group mb-8 md:mb-6" >
                        <Image 
                            src={project.image.url} 
                            alt={project.image.alt} 
                            class="rounded-md w-full"
                            />
                            <div class="absolute bottom-0 left-0 right-0 top-auto h-full bg-gradient-to-t from-slate-900 rounded-md" />
                            <div class="absolute bottom-1 md:bottom-0 left-0 right-0 text-white p-4 md:py-8 rounded-md transition-all duration-300 md:transform md:translate-y-0 md:group-hover:translate-y-[-28px]">
                                <h1 class="font-krub text-indigo-100 font-medium text-xl">{project.title}</h1>
                            </div>
                            <div class="flex flex-wrap items-center gap-2 mt-2 text-base font-incon font-medium  px-4 opacity-0 md:opacity-0 md:group-hover:opacity-100 absolute md:bottom-0 group-hover:bottom-5 transition-all duration-300">
                                {project.tags.map((tag:string)=>(
                                    <h1 class="px-3 pt-[4px] rounded-2xl bg-white text-slate-900">{tag}</h1>
                                ))}
                            </div>
                        </div>

                    </div>
                </a> 
                ))}
        </div>
    </div>

  </div>
</Layout>
